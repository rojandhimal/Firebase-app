<div class="container">
    <h2 style="margin-top: 100px;">Add Student</h2>
    <hr>
    <form method="POST" action="/students/add" enctype="multipart/form-data" class="needs-validation" novalidate>
        <div class="pl-lg-4">
            <div class="row mt-2" >
                <div class="col-lg-6">
                    <div class="form-group">
                        <label class="form-control-label" for="input-first-name">First Name *</label>
                        <input type='text' name="firstname" class="form-control" placeholder="firstName" required />
                        <div class="invalid-tooltip">
                            Please provide first name.
                        </div>
                    </div>
                </div>
                   
                <div class="col-lg-6">
                    <div class="form-group">
                        <label class="form-control-label" for="input-last-name">Last Name</label>
                        <input type="text" name="lastname" id="input-last-name" class="form-control" placeholder="Last name" required/>
                        <div class="invalid-tooltip">
                            Please provide valid user lastname.
                        </div>
                    </div>
                </div>
            </div>

            <div class="row mt-3" >
                <div class="col-lg-6">
                    <div class="form-group">
                        <label class="form-control-label" for="address">Address </label>
                        <input type="text" name="address" id="address" class="form-control" placeholder="Enter address">
                        <div class="invalid-tooltip">
                            address
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label class="form-control-label" for="parents">Parent's Name: </label>
                        <input type="text" name="parents" id="parents" class="form-control" placeholder="Enter parent's name">
                        <div class="invalid-tooltip">
                            Parent's name
                        </div>
                    </div>
                </div>
                
            </div>

            <div class="row mt-3" >
                <div class="col-lg-4">
                    <div class="form-group">
                        <label class="form-control-label" for="cars">Choose a course:</label><br>
                        <select name="course" id="course">
                        <option value="zumba">Zumba</option>
                        <option value="dance">Dance</option>
                        <option value="makup">Makeup</option>
                        <option value="fitness">fitness</option>
                        </select>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        <label class="form-control-label" for="cars">Course Type:</label><br>
                        <select name="coursetype" id="cars">
                        <option value="basic">Basic</option>
                        <option value="intermediate">Intermediate</option>
                        <option value="advanced">Advanced</option>
                        </select>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        <label class="form-control-label" for="cars">Gender:</label><br>
                        <select name="gender" id="gender">
                        <option value="male">Male</option>
                        <option value="female">Female</option>
                        <option value="other">Other</option>
                        </select>
                    </div>
                </div>
                
            </div>


            <div class="row mt-3" >
                <div class="col-lg-6">
                    <div class="form-group">
                        <label class="form-control-label" for="dob">Date of birth</label>
                        <input type='date' name="dob" class="form-control"  required />
                        <div class="invalid-tooltip">
                            Please provide date of birth.
                        </div>
                    </div>
                </div>
                   
                <div class="col-lg-6">
                    <div class="form-group">
                        <label class="form-control-label" for="phone">Phone number </label>
                        <input type="number" name="phone" id="phone" class="form-control" placeholder="phone number">
                        <div class="invalid-tooltip">
                            Please provide valid user lastname.
                        </div>
                    </div>
                </div>
            </div>

            <div class="row mt-3" >
                <div class="col-lg-6">
                    <div class="form-group">
                        <label class="form-control-label" for="entrydate">Entry Date*</label>
                        <input type='date' name="entrydate" class="form-control" placeholder="entrydate" required />
                        <div class="invalid-tooltip">
                            Please provide entrydate.
                        </div>
                    </div>
                </div>
                   
                <div class="col-lg-6">
                    <div class="form-group">
                        <label class="form-control-label" for="exitdate">Exit Date </label>
                        <input type="date" name="exitdate" id="exitdate" class="form-control">
                        <div class="invalid-tooltip">
                            Please provide valid user lastname.
                        </div>
                    </div>
                </div>
            </div>

            
    
            <div class="row mt-3">
                <div class="col-lg-6">
                    <div class="form-group">
                        <label class="form-control-label" for="input-email">Email *</label>
                        <input type='email' class="form-control" placeholder="Name"
                            name="email" required />
                        <div class="invalid-tooltip">
                            Please provide name.
                        </div>
                    </div>
                </div>
                   
                <div class="col-lg-6">
                    <div class="form-group">
                        <label class="form-control-label" for="coverImage">Profile Image</label>
                        <input type="file" name="images" accept="image/*" id="coverImage" class="form-control">
                        <div class="invalid-tooltip">
                            Please provide valid user image.
                        </div>
                    </div>
                </div>
            </div>
          
            <div class="row mt-3">
                <div class="form-group">
                    <label class="form-control-label" for="input-first-name">About User *</label>
                    <textarea class="form-control" rows="5" id="review" name="review" placeholder="About user here..." required></textarea>
                    <div class="invalid-tooltip">
                        Please provide about.
                    </div>
                </div>
            </div>
            <div class="col-12 mt-2 text-right">
                <input type="submit" class="btn btn-md btn-primary mb-2" style="background-color: black;" value="Save User">
            </div>
        </div>
    </form>
</div>